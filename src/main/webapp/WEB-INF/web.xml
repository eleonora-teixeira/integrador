<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>br.csi.controller_servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UsuarioServlet</servlet-name>
    <servlet-class>br.csi.controller_servlet.UsuarioServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProdutoServlet</servlet-name>
    <servlet-class>br.csi.controller_servlet.ProdutoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EnderecoServlet</servlet-name>
    <servlet-class>br.csi.controller_servlet.EnderecoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RedirectServlet</servlet-name>
    <servlet-class>br.csi.controller_servlet.RedirectServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CarrinhoServlet</servlet-name>
    <servlet-class>br.csi.controller_servlet.CarrinhoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ComprasServlet</servlet-name>
    <servlet-class>br.csi.controller_servlet.CompraServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UsuarioServlet</servlet-name>
    <url-pattern>/perfil</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EnderecoServlet</servlet-name>
    <url-pattern>/cadastroEndereco</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProdutoServlet</servlet-name>
    <url-pattern>/cadastroProduto</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RedirectServlet</servlet-name>
    <url-pattern>/redirect</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CarrinhoServlet</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ComprasServlet</servlet-name>
    <url-pattern>/compras</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>
      30
    </session-timeout>
  </session-config>
</web-app>